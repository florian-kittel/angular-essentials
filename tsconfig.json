{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "core-ui": [
        "dist/core-ui/core-ui",
        "dist/core-ui"
      ],
      "@angular-essentials/core": [
        "projects/core-ui"
      ],
      "@angular-essentials/core/*": [
        "dist/core-ui/*"
      ]
    }
  }
}
